{
  "name": "Pre-Commit Quality Gate",
  "description": "Runs full quality checks before commits",
  "trigger": {
    "type": "pre_commit"
  },
  "actions": [
    {
      "type": "run_command",
      "command": "pnpm check",
      "halt_on_error": true
    },
    {
      "type": "run_command", 
      "command": "pnpm coverage",
      "halt_on_error": false
    },
    {
      "type": "show_notification",
      "message": "âœ… Quality gate passed - ready to commit!"
    }
  ],
  "enabled": true
}