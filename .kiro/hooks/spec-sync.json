{
  "name": "Spec to Implementation Sync",
  "description": "Automatically updates implementation when specs are modified",
  "trigger": {
    "type": "file_saved",
    "patterns": [
      "specs/**/*.md"
    ]
  },
  "actions": [
    {
      "type": "run_command",
      "command": "pnpm exec tsx run-agents.ts",
      "args": ["${relative_path}"]
    }
  ],
  "enabled": true
}